<div class="grid-highlights pt-5">
  <div class="container">
    {% for h in highlights %}
      <div class="row justify-content-between align-items-center pb-5">

        <div class="col-12 col-md-5 order-2 {{ loop.index0 is even ? 'order-md-2' : 'order-md-1' }}">
          <h5 class="tagline mb-0">{{ h.tagline }}</h5>
          <h3>{{ h.title }}</h3>
          <div class="highlight-body mb-0">{{ h.body }}</div>
        </div>

        <div class="col-12 col-md-6 mb-4 mb-md-0 order-1 {{ loop.index0 is even ? 'order-md-1' : 'order-md-2' }}">
          <img class="w-100" src="{{ h.image.src }}" />
        </div>

      </div>
    {% endfor %}
  </div>
</div>
